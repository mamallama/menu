<div class="row">
  <div class="col-md-8"><h1>Menu</h1></div>
  <div class="col-md-4"></div>
</div>

<p id="notice"><%= notice %></p>


<div class="col-md-4">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= link_to dish.name, edit_dish_path(dish)  %></td>
        <td><%= dish.price %></td>
        <td><%= dish.description %></td>
        <td><%= dish.course_id %></td><br>
        <td id= "link"><%= link_to 'Edit', edit_dish_path(dish) %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Dish', new_dish_path %>

</div>
